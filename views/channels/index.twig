{% extends layout %}
{% block title %} Channels {% endblock %}
{% block header %} 
	<a href="/channels/create" class="btn btn-primary pull-right">New Channel</a>
	<h1> {% if category is defined %} {{ category.name }} > {% endif %} Channels </h1>
 {% endblock %}
{% block content %}
<div class="row">
	{% for c in channels %}
		<div class="col-md-4"><div class="panel panel-default">
	        <div class="panel-heading">
	          <h3 class="panel-title">
	          	{{c.title}}
	          	<form role="form" class="ajax pull-right" 
	          		action="/channels/{{ c.id }}" method="delete">
		          	<button class="btn btn-danger btn-sm">
		          		<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
		          	</button>
		        </form>
	          	<div class="clearfix"></div>
	          </h3>
	        </div>
	        <div class="panel-body list-group">
	          <li class="list-group-item">
	            {{c.description}}
	          </li>
	          <li class="list-group-item">
	            New Items : {{ c.newItems() | length }}
	          </li>
	          <li class="list-group-item">
	            <a href="/channels/{{c.id}}/items" class="btn btn-primary pull-right">View Items</a>
	          </li>
	        </div>
	    </div></div>
	{% endfor %}
</div>
{% endblock %}