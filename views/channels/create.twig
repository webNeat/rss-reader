{% extends layout %}{% block title %} New Channel {% endblock %}
{% block header %} <h1>New Channel</h1> {% endblock %}
{% block content %}
<form class="form-horizontal" role="form" action="/channels/" method="post">
  <div class="form-group">
    <label for="lastname" class="col-sm-2 control-label">Category</label>
    <div class="col-sm-10">
      <select class="form-control" name="category">
        {% for c in categories %}
          <option value="{{ c.id }}"> {{c.name}} </option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="firstname" class="col-sm-2 control-label">Link</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="link" placeholder="RSS or Atom feed link">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="submit" type="submit" class="btn btn-success"> Add </button>
    </div>
  </div>
</form>
{% endblock %}