{% extends layout %}{% block title %} Edit Category {% endblock %}
{% block header %} <h1>Edit Category : {{ category.name }} </h1> {% endblock %}
{% block content %}
<div id="alerts"></div>
<form class="form-horizontal ajax" role="form" 
  action="/categories/{{ category.id }}" method="put">
  <div class="form-group">
    <label for="lastname" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input id="name" type="text" class="form-control" name="name" value="{{ category.name }}" placeholder="Category Name">
    </div>
  </div>
  <div class="form-group">
    <label for="firstname" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="description" value="{{ category.description }}" placeholder="Summary about this category">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="submit" type="submit" class="btn btn-success"> Save </button>
    </div>
  </div>
</form>
{% endblock %}