{% extends layout %}
{% block title %} Categories {% endblock %}
{% block header %} 
	<a href="/categories/create" class="btn btn-primary pull-right">New Category</a>
	<h1> Categories </h1>
 {% endblock %}
{% block content %}
<div class="row">
	{% for c in categories %}
		<div class="col-md-4"><div class="panel panel-default">
	        <div class="panel-heading">
	          <h3 class="panel-title">
	          	{{c.name}}
	          	<form role="form" class="ajax pull-right" 
	          		action="/categories/{{ c.id }}" method="delete">
		          	<button class="btn btn-danger btn-sm">
		          		<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
		          	</button>
		        </form>
	          	<a href="/categories/{{c.id}}/edit" class="btn btn-success btn-sm pull-right">
	          		<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
	          	</a>
	          	<div class="clearfix"></div>
	          </h3>
	        </div>
	        <div class="panel-body list-group">
	          <li class="list-group-item">
	            {{c.description}}
	          </li>
	          <li class="list-group-item">
	            Channels : {{ c.channels | length }}
	          </li>
	          <li class="list-group-item">
	            <a href="/categories/{{c.id}}/channels" class="btn btn-success pull-right">View Channels</a> 
	            <a href="/categories/{{c.id}}/items" class="btn btn-primary pull-right">View Items</a>
	          </li>
	        </div>
	    </div></div>
	{% endfor %}
</div>
{% endblock %}